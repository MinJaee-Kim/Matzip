<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:srcCompat="@drawable/user" />-->

    <TextView
        android:id="@+id/comm_profileTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginStart="16dp"
        android:text="@string/comm_profileTv"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/comm_commentTv"
        app:layout_constraintStart_toEndOf="@+id/comm_profileIv" />

    <TextView
        android:id="@+id/comm_commentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:duplicateParentState="false"
        android:gravity="start|top"
        android:text="@string/comm_commentTv"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/comm_profileIv"
        app:layout_constraintTop_toBottomOf="@+id/comm_profileTv" />

</androidx.constraintlayout.widget.ConstraintLayout>